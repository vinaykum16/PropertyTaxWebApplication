<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/taxDB</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Welcome123$</property>

		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.show_sql">true</property>

		<mapping class="com.example.property_tax.entity.AllZones" />
		<mapping class="com.example.property_tax.entity.Description" />
		<mapping class="com.example.property_tax.entity.PropertyTax" />
		<mapping class="com.example.property_tax.entity.Status" />
		<mapping class="com.example.property_tax.entity.TaxForm" />
		<mapping class="com.example.property_tax.entity.UnitAreaValue" />
		<mapping class="com.example.property_tax.entity.User" />
		<mapping class="com.example.property_tax.entity.ZonalWiseReport" />
	</session-factory>
</hibernate-configuration>